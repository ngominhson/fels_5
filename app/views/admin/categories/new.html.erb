<% provide(:title, 'new Category') %>
<h1>Make new Categoty </h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [:admin, @category] do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.submit "Create Category", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>